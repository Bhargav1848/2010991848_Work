<%- include('header.ejs') %>
    <%- include('navbar.ejs') %>
        <center class="myfont">Add Product</center>
        <form action="/addp" method="POST">
            <center>

                <table>
                    <tr>
                        <td>
                            <!-- <label for="name">Product Name</label> -->
                            <input style="margin-top:20px; width:300px;" autocomplete="off" placeholder="Product Name" type="text" id="name" name="name" required>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <!-- <label for="description">Product Description</label> -->
                            <input style="margin-top:20px; width:300px;" autocomplete="off" placeholder="Product Description" type="text" id="description" name="des" required>
                        </td>
                    </tr>

                    <tr>
                        <td>

                            <!-- <label for="price">Price</label> -->
                            <input style="margin-top:20px; width:300px;" autocomplete="off" placeholder="Price" type="number" id="price" name="price" min="0" step="0.01" required>
                        </td>
                    </tr>

                    <tr>
                        <td>

                            <!-- <label for="sale-price">Sale Price</label> -->
                            <input style="margin-top:20px; width:300px;" autocomplete="off" placeholder="Sale Price" type="number" id="sale-price" name="saleprice" min="0" step="0.01" required>
                        </td>
                    </tr>
                    <tr>
                        <td>

                            <!-- <label for="sale-price">Sale Price</label> -->
                            <input style="margin-top:20px; width:300px;" autocomplete="off" placeholder="Image Link" type="text" id="sale-price" name="image" min="0" step="0.01">
                        </td>
                    </tr>
                    <tr>
                        <td>

                            <!-- <label for="sale-price">Sale Price</label> -->
                            <input style="margin-top:20px; width:300px;" autocomplete="off" placeholder="Quantity" type="text" id="sale-price" name="quantity" min="0" step="0.01" required>
                        </td>
                    </tr>

                    <tr>
                        <td>

                            <% var len=results.length%>
                                <!-- <label for="category">Category</label> -->
                                <select style="width:300px;margin-top:20px;" id="category" name="category">
                        <%  for(var i =0;i<len;i++){%>
                            <option value="<%= results[i].id%>"><%=results[i].type%></option>
                            <%}%>
                        </select>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <center>

                                <button style="width:300px;margin-top:20px;" type="submit">Add Product</button>
                            </center>
                        </td>
                    </tr>
                </table>
            </center>
        </form>

        <%- include('footer.ejs') %>